<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- STATES WHEN BUTTON IS NOT PRESSED -->

    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false"
        android:state_pressed="false" android:drawable="@drawable/educacity_tab_border_bottom_slim" />
    <item android:state_focused="false" android:state_selected="true"
        android:state_pressed="false" android:drawable="@drawable/educacity_tab_border_bottom" />

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false"
        android:state_pressed="false" android:drawable="@drawable/educacity_tab_border_bottom_slim_focused" />
    <item android:state_focused="true" android:state_selected="true"
        android:state_pressed="false" android:drawable="@drawable/educacity_tab_border_bottom_focused" />

    <!-- Pressed -->
    <!--    Non focused states -->
    <item android:state_focused="false" android:state_selected="false"
        android:state_pressed="true" android:drawable="@drawable/educacity_tab_border_bottom_slim_focused" />
    <item android:state_focused="false" android:state_selected="true"
        android:state_pressed="true" android:drawable="@drawable/educacity_tab_border_bottom_focused" />

    <!--    Focused states -->
    <item android:state_focused="true" android:state_selected="false"
        android:state_pressed="true" android:drawable="@drawable/educacity_tab_border_bottom_slim_focused" />
    <item android:state_focused="true" android:state_selected="true"
        android:state_pressed="true" android:drawable="@drawable/educacity_tab_border_bottom_focused" />
</selector>